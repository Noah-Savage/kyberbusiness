# KyberBusiness Environment Configuration
# Copy this file to .env and update the values

# MongoDB connection (the docker-compose uses the 'mongo' service name)
MONGO_URL=mongodb://mongo:27017
DB_NAME=kyberbusiness

# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-chars

# Encryption Key for storing sensitive credentials (PayPal, SMTP passwords)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If left empty or invalid, a new key will be auto-generated (but won't persist across restarts)
ENCRYPTION_KEY=
